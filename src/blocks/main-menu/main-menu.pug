mixin main-menu(options={})
    - 
        var items = options.items ? options.items : [];
    nav.main-menu
        ul.main-menu__list
            each item in items
                - var activeClass = item.active ? ' main-menu__list-elem_active' : '';
                - var submenuClass = item.submenu ? ' main-menu__list-elem_type_submenu' : '';
                li(class="main-menu__list-elem" + activeClass + submenuClass)
                    if item.submenu
                        span.main-menu__list-elem-text= item.text
                        i.material-icons.main-menu__expand-more-icon expand_more
                    else
                        a.main-menu__list-elem-link(href="/change-me.html")= item.text
                    

