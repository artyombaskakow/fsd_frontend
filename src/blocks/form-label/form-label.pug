mixin form-label(obj)
    -
        var text = obj.text ? obj.text : '';
        var hint = obj.hint ? obj.hint : '';
        var icon = obj.icon ? obj.icon : '';
        var headerTag = obj.headerTag ? obj.headerTag : false;
        var hintUppercase = typeof obj.hintUppercase=='boolean' ? obj.hintUppercase : true;
        var hintAdditionalClass = '';
        hintAdditionalClass += headerTag ? ' form-label__hint_size_medium' : '';
        hintAdditionalClass += hintUppercase ? ' form-label__hint_uppercase' : '';

    .form-label
        if headerTag
            h2.form-label__text-header= text
        else
            .form-label__text= text
        if hint
            span(class="form-label__hint" + hintAdditionalClass)= hint
        else
            if icon
                i.material-icons.form-label__icon= icon