include ../footer-company-info/footer-company-info 

mixin page-footer(options={})
    -
        var description = options.description ? options.description : '';
        var theme = options.theme ? options.theme : '';
        var instagram = options.instagram ? options.instagram : '';
        var facebook = options.facebook ? options.facebook : '';
        var twitter = options.twitter ? options.twitter : '';

        if(theme!='simple'){
            var navColumns = options.navColumns ? options.navColumns : [];
            var subscribe = options.subscribe ? options.subscribe : {};
            var copyright = options.copyright ? options.copyright : '';
        }
    footer.page-footer 
        .page-footer__wrapper
            if theme=='simple'
                div simple

            else
                .page-footer__company-info-container
                    +footer-company-info({description: description})
                .page-footer__nav-menu-container nav menu
                .page-footer__subscribe-container subscribe
