include ../form-checkbox/form-checkbox 

mixin form-checkbox-group(obj)
    - 
        var label = obj.label ? obj.label : '';
        var elems = obj.elems ? obj.elems : [];
        var expandableClass = '';
        if(obj.expandable){
            expandableClass = obj.expanded ? ' form-checkbox-group_expandable_expanded' : ' form-checkbox-group_expandable_close';
        }
        
    div(class='form-checkbox-group' + expandableClass)
        label.form-checkbox-group__label= label
            if obj.expandable
                span.form-checkbox-group__expand-arrow
                    svg(width="12" height="8" viewBox="0 0 12 8" fill="none")
                        path(d="M10.5938 0.57812L12 1.98437L6 7.98437L3.49418e-06 1.98437L1.40625 0.578122L6 5.17187L10.5938 0.57812Z" fill="#1F2041" fill-opacity="0.5")
        .form-checkbox-group_elems-container
            each elem in elems
                - elem.className = 'form-checkbox-group__checkbox-elem';
                +form-checkbox(elem)