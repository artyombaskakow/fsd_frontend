extends ../blocks/ui-kit-layout/ui-kit-layout 
include ../blocks/blocks

block variables
    - var title = 'Form Elements'

block content
    +icons-define

    .flex-container
        .flex-column(style='width: 320px; margin-right: 126px')

            +form-group({label: 'Text field', hint: 'Default'})
                +form-input({type: 'email', placeholder: 'Email'})

            +form-group({label: 'Text field', hint: 'Hover / Focus'})
                +form-input({type: 'text', placeholder: 'Type text', value: 'This is pretty awesome'})

            +form-group({label: 'Dropdown', hint: 'Default'})
                +form-input({mode: 'dropdown', label: 'dropdown', placeholder: 'Сколько гостей',
                    dropdownApplyBtn: true,
                    dropdownInputText: 'гостя',
                    dropdownElems: [
                        {title: 'Взрослые', count: 0},
                        {title: 'Дети'},
                        {title: 'Младенцы'}
                    ]
                })
            
            +form-group({label: 'Masked text field', hint: 'Default'})
                +form-input({mode: 'mask', placeholder: 'ДД.ММ.ГГГГ', mask: '00.00.0000'})

            
            .form-elements__form-group-wrapper
                +form-group
                    +form-datepicker({labelFrom: 'Date Dropdown', labelTo: 'Date Dropdown', inputToValue: '19.08.2019'})
            
            .narrow-column
                .form-elements__form-group-wrapper
                    +form-group
                        +form-datepicker({label: 'Filter date dropdown', filterDate: true, inputValue: '19.08.2019 - 23.08.2019'})

                +form-group({label: 'Subscription text field'})(style="margin-top: 37px")
                    +form-input({mode: 'subscription', placeholder: 'Email'})

        .flex-column
            +form-group({label: 'Checkbox buttons', labelMargin: true})(style="margin-bottom: 36px;")
                +form-checkbox({label: 'Можно курить'})
                +form-checkbox({label: 'Можно с питомцами', checked: true})
                +form-checkbox({label: 'Можно пригласить гостей <br/>(до 10 человек)', checked: true})

            .form-elements__form-group-wrapper
                +form-group({label: 'Radio buttons', labelMargin: true})(style="margin-bottom: 28px;")
                    +form-radio-buttons({
                        name: 'sex',
                        elems: [
                            {label: 'Mужчина', value: 'man', checked: true},
                            {label: 'Женщина', value: 'woman'}
                        ]
                    })

            .form-elements__form-group-wrapper
                +form-group({label: 'Toggle', labelMargin: true})
                    +form-checkbox({label: 'Получать спецпредложения', mode: 'toggle', checked: true})
                    +form-checkbox({label: 'Получать спецпредложения', mode: 'toggle'})

            .form-elements__form-group-wrapper
                +form-group({label: 'Like button', labelMargin: true})(style="margin-bottom: 29px;")
                    +form-button-like({likeCount: 2})(style="margin-right: 10px")
                    +form-button-like({likeCount: 12, liked: true})

            .form-elements__form-group-wrapper
                +form-group({label: 'Rate button', labelMargin: true})
                    +form-button-rate({value: 4})
                    +form-button-rate({value: 5})

        .flex-column(style='width: 320px; margin-left: 72px')
            //div(style="width: 266px; margin-bottom: 40px")
            .narrow-column
                +range-slider({ startValue: 5000, endValue: 10000, max: 15000})

            .form-elements__form-group-wrapper
                +form-group({label: 'Buttons', labelMargin: true})
                    .form-elements__button-row
                        +form-button({text: 'Click me'})
                        +form-button()
                    .form-elements__button-row
                        +form-button({theme: 'ghost'})
                        +form-button({theme: 'ghost'})
                    .form-elements__button-row
                        +form-button({theme: 'simple'})
                        +form-button({theme: 'simple'})
                    .form-elements__button-row
                        +form-button({theme: 'fullwidth', text: 'Перейти к оплате'})

            div
                +form-group({label: 'Pagination', labelMargin: true})
                    +pagination({elemCount: 150, pageSize: 12, descr: 'вариантов аренды'})

//-                

            +form-group({label: 'Dropdown', hint: 'Default'})(style="margin-top: 96px;")
                +form-input({mode: 'dropdown', placeholder: 'Комнаты',
                    dropdownElems: [
                        {title: 'Спальни', name: 'bedrooms', count: 2},
                        {title: 'Кровати', name: 'beds', count: 2},
                        {title: 'Ванные комнаты', name: 'bathrooms'}
                    ]
                })
            +form-group({label: 'Dropdown', hint: 'Expanded'})
                +form-input({mode: 'dropdown', placeholder: 'Комнаты',
                    dropdownApplyBtn: true,
                    dropdownClearBtn: true,
                    dropdownElems: [
                        {title: 'Спальни', name: 'bedrooms', count: 2},
                        {title: 'Кровати', name: 'beds', count: 2},
                        {title: 'Ванные комнаты', name: 'bathrooms'}
                    ]
                })

            div(style="margin-top: 168px")
                +form-group({label: 'expandable checkbox list', expandable: true})
                    +form-checkbox({label: 'Завтрак'})
                    +form-checkbox({label: 'Письменный стол'})
                    +form-checkbox({label: 'Кроватка'})

                +form-group({label: 'expandable checkbox list', expandable: true, expanded: true})(style="margin-bottom: 18px;")
                    +form-checkbox({label: 'Завтрак'})
                    +form-checkbox({label: 'Письменный стол', checked: true})
                    +form-checkbox({label: 'Стул для кормления', checked: true})
                    +form-checkbox({label: 'Кроватка', checked: true})
                    +form-checkbox({label: 'Телевизор'})
                    +form-checkbox({label: 'Шампунь'})
                    +form-checkbox({label: 'Телевизор'})
                    +form-checkbox({label: 'Шампунь'}) 

            +advantages-list({list: [
                {icon: 'insert_emoticon', title: 'Комфорт', descr: 'Шумопоглощающие стены'},
                {icon: 'location_city', title: 'Удобство', descr: 'Окно в каждой из спален'}
            ]})


    div
        div(style="width: 320px; display: inline-block;; margin-right: 72px;")

           

            +form-group({label: 'dropdown'})(style="margin-top: 181px")
                +form-input({mode: 'dropdown', label: 'dropdown', placeholder: 'Сколько гостей', hint: '',
                    dropdownApplyBtn: true,
                    dropdownClearBtn: false,
                    dropdownElems: [
                        {title: 'Взрослые', count: 0},
                        {title: 'Дети'},
                        {title: 'Младенцы'}
                    ]
                })

            div(style="margin-top: 253px")
                +form-group({label: 'Rich checkbox buttons'})
                    +form-checkbox({label: 'Широкий коридор', mode: 'rich', descr: 'Ширина коридоров в номере<br/> не менее 91 см'})
                    +form-checkbox({label: 'Помощник для инвалидов', mode: 'rich', descr: 'На 1 этаже вас встретит специалист<br/> и проводит до номера.'})

        div(style="width: 320px; display: inline-block;")

           


            +form-group({label: 'dropdown'})(style="margin-top: 231px")
                +form-input({mode: 'dropdown', label: 'dropdown', placeholder: 'Сколько гостей', hint: '',
                    dropdownApplyBtn: true,
                    dropdownClearBtn: true,
                    dropdownInputText: 'гостя',
                    dropdownElems: [
                        {title: 'Взрослые', count: 2},
                        {title: 'Дети', count: 1},
                        {title: 'Младенцы'}
                    ]
                })

            div(style="margin-top: 252px")
                +form-group({label: 'Bullet list'})
                    +bullet-list([
                        'Нельзя с питомцами',
                        'Без вечеринок и мероприятий',
                        'Время прибытия — после 13:00, а выезд до 12:00'
                    ])
    
        div(style="margin-top: 190px")
            +comment({
                authorPhoto: '/assets/img/comment-man1.png',
                authorName: 'Мурад Сарафанов',
                date: '5 дней назад',
                likeCount: 12,
                liked: true,
                text:   `Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. 
                        И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — 
                        никто не жаловался из соседей.`
            })