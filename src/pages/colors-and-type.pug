extends ../layouts/ui-kit-layout 

block variables
    - 
        var title = 'Colors&Type';
        var pageClass = 'page-color-and-types';

block content
    .container.flex-container
        .ui-kit-color-examples
            +ui_kit_color({title: 'Dark Shade 100%', subtitle: '#1F2041', color: '#1F2041'})
            +ui_kit_color({title: 'Dark Shade 75%', subtitle: '#1F2041', color: 'rgba(31, 32, 65, 0.75)'})
            +ui_kit_color({title: 'Dark Shade 50%', subtitle: '#1F2041', color: 'rgba(31, 32, 65, 0.5);'})
            +ui_kit_color({title: 'Dark Shade 25%', subtitle: '#1F2041', color: 'rgba(31, 32, 65, 0.25);'})
            +ui_kit_color({title: 'Dark Shade 5%', subtitle: '#1F2041', color: 'rgba(31, 32, 65, 0.05);'})
            +ui_kit_color({title: 'Purple', subtitle: '#BC9CFF', color: '#BC9CFF'})
            +ui_kit_color({title: 'Green 100%', subtitle: '#6FCF97', color: '#6FCF97'})
        .ui-kit-text-examples
            .table
                .t-row
                    .t-cell 
                        h1 h1
                    .t-cell 
                        h1 This one is the sub-section or widget title
                .t-row
                    .t-cell 
                        h2 h2
                    .t-cell
                        h2 Next one is the item title inside widgets
                .t-row
                    .t-cell 
                        h3 h3
                    .t-cell
                        h3 This is a label or CTA text
                .t-row
                    .t-cell Body
                    .t-cell This is the body text which is used for most of the design, like paragraphs, lists, etc.


